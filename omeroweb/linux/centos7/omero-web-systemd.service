[Unit]
Description=OMERO.web
Requires=nginx.service

[Service]
User=omero
Type=forking
PIDFile=~omero/OMERO.web/var/django.pid
Restart=on-failure
RestartSec=10
Environment="VENVDIR=~omero/omerowebvenv" "BINDIR=~omero/OMERO.py/bin"
ExecStart=/usr/bin/bash -c "source $VENVDIR/bin/activate; $BINDIR/omero web start"
ExecStop=/usr/bin/bash -c "source $VENVDIR/bin/activate; $BINDIR/omero web stop"

[Install]
WantedBy=multi-user.target
